<p id="notice"><%= notice %></p>


<div class="container">
  <!-- Search Form -->
  <%= form_tag(patients_path, :method => "get") do %>
    <%= text_field_tag :search, nil, :placeholder => "Search by last name" %>
    <%= submit_tag "Search" %>
  <% end %>
<h1>Patients</h1>
<div class=container>
<table class=table-hover>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Dob</th>
      <th>Admitted</th>
      <th>Discharged</th>
      <th>Hospital</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Injury</th>
      <th>Infection</th>
      <th>Observation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= patient.first_name %></td>
        <td><%= patient.last_name %></td>
        <td><%= patient.dob %></td>
        <td><%= patient.admitted %></td>
        <td><%= patient.discharged %></td>
        <td><%= patient.hospital %></td>
        <td><%= patient.address %></td>
        <td><%= patient.phone %></td>
        <td><%= patient.injury %></td>
        <td><%= patient.infection %></td>
        <td><%= patient.observation %></td>
        <td><%= link_to 'Show', patient %></td>

          <td><%= link_to 'Edit', edit_patient_path(patient) %></td>
          <td><%= link_to 'Destroy', patient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div>

<br>
  <% if user_signed_in? %>
    <%= link_to 'New Patient', new_patient_path %>
  <% end %>
</div>
