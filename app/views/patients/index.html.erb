<p id="notice"><%= notice %></p>



<div class="container">
  <div class="panel panel-default">
    <div class="panel-heading">Patient Search</div>
    <div class="panel-body">
  <%= search_form_for @ransack do |f| %>
    <div class="field">
      <%= f.label :last_name_cont, "Last Name contains" %>
      <%= f.text_field :last_name_cont %>
    </div>
    <div class="field">
      <%= f.label :hospital_cont, "Hospital contains" %>
      <%= f.text_field :hospital_cont %>
    </div>
    <div class="field">
      <%= f.label :admitted_gteq, "Admitted between" %>
      <%= f.text_field :admitted_gteq %>
      <%= f.label :admitted_lteq, "and" %>
      <%= f.text_field :admitted_lteq %>
    </div>
    <div class="field">
      <%= f.label :injury_cont, "Injury contains" %>
      <%= f.text_field :injury_cont %>
    </div>
    <div class="actions"><%= f.submit "Search" %> </div>


  <% end %>
  <% if user_signed_in? %>
    <%= link_to 'New Patient', new_patient_path %>

  <% end %>
  </div>
</div>
    <div class="panel panel-default">
  <div class="panel-heading">Patients List</div>
  <div class="panel-body">



</div>
<div class="table-responsive">
<table class="table table-hover">
  <thead>
    <tr>
      <th><%= sort_link @ransack, :first_name, "First name" %></th>
      <th><%= sort_link @ransack, :last_name, "Last name" %></th>
      <th><%= sort_link @ransack, :dob, "Dob" %></th>
      <th><%= sort_link @ransack, :admitted, "Admitted" %></th>
      <th><%= sort_link @ransack, :discharged, "Discharged" %></th>
      <th><%= sort_link @ransack, :hospital, "Hospital" %></th>
      <th>Address</th>
      <th><%= sort_link @ransack, :phone, "Phone" %></th>
      <th><%= sort_link @ransack, :injury, "Injury" %></th>
      <th><%= sort_link @ransack, :infection, "Infection" %></th>
      <th><%= sort_link @ransack, :cost, "Cost" %></th>
      <th>Observation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= patient.first_name %></td>
        <td><%= patient.last_name %></td>
        <td><%= patient.dob %></td>
        <td><%= patient.admitted %></td>
        <td><%= patient.discharged %></td>
        <td><%= patient.hospital %></td>
        <td><%= patient.address %></td>
        <td><%= patient.phone %></td>
        <td><%= patient.injury %></td>
        <td><%= patient.infection %></td>
        <td><%= patient.cost %></td>
        <td><%= patient.observation %></td>
        <td><%= link_to 'Show', patient %></td>

        <% if current_user.admin?%>

          <td><%= link_to 'Edit', edit_patient_path(patient) %></td>
          <td><%= link_to 'Destroy', patient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

</div>
</div>
